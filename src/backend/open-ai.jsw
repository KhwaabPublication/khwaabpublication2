import {fetch} from 'wix-fetch';
import {getSecret} from 'wix-secrets-backend';

export async function getChatbotResponse(messages) {
  const instructions = "Be a Nice chatbot";
  const systemMessage = {
    role: "system",
    content: instructions,
  };

  // Create a new array with system message and user messages
  const completeMessages = [systemMessage, ...messages];
  return await getChatCompletion(completeMessages);
}

export async function getChatCompletion(messages) {
    const apiKey = await getSecret("KHWAAB-PUBLICATION");
    const endpoint = "https://api.openai.com/v1/chat/completions";
    
    const options = {
      method: "POST",
      headers: {
        'Content-Type': "application/json",
        'Authorization': `Bearer ${apiKey}`
      },
      body: JSON.stringify({
        messages: messages,
        model: "gpt-4",
        max_tokens: 1000,
        temperature: 0.7
      })
    };
     
    try {
      const response = await fetch(endpoint, options);
      const data = await response.json();
      
      if (!response.ok) {
        throw new Error(data.error?.message || 'Failed to get completion');
      }
      
      return data.choices[0].message.content;
    } catch (error) {
      console.error("Error getting completion:", error);
      throw error;
    }
}